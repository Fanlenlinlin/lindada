<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.jionglemo.jionglemo_b.ProductManager.ProductManagerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar"
            android:background="?attr/colorPrimary">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/juxing_666666_kuan"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/sousuo"
                    android:layout_margin="5dp"/>

                <EditText
                    android:id="@+id/searchET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_marginRight="5dp"
                    android:hint="请输入商品名称"
                    android:textSize="16sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/searchTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索"
                android:textColor="#666"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:paddingRight="16dp"/>
        </LinearLayout>

        <RadioGroup
            android:id="@+id/optionsRG"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">
            <RadioButton
                android:id="@+id/upRB"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/pingjia_check_selector"
                android:layout_margin="3dp"
                android:text="出售中"
                android:textColor="@drawable/pingjia_textcolor_check_selector"
                android:textSize="15sp"
                android:gravity="center"
                android:padding="8dp"/>
            <RadioButton
                android:id="@+id/downRB"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/pingjia_check_selector"
                android:layout_margin="3dp"
                android:text="已下架"
                android:textColor="@drawable/pingjia_textcolor_check_selector"
                android:textSize="15sp"
                android:gravity="center"
                android:padding="8dp"/>
            <RadioButton
                android:id="@+id/classifyRB"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@drawable/pingjia_check_selector"
                android:layout_margin="3dp"
                android:text="分类"
                android:textColor="@drawable/pingjia_textcolor_check_selector"
                android:textSize="15sp"
                android:gravity="center"
                android:padding="8dp"/>
        </RadioGroup>

        <LinearLayout
            android:id="@+id/orderLL"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center_vertical">

            <com.jionglemo.jionglemo_b.CommonView.OrderButton
                android:id="@+id/addDateOB"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:orderText="添加时间"
                android:gravity="center"/>

            <com.jionglemo.jionglemo_b.CommonView.OrderButton
                android:id="@+id/sellNumOB"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:orderText="销量"
                android:gravity="center"/>

            <com.jionglemo.jionglemo_b.CommonView.OrderButton
                android:id="@+id/kuCunOB"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:orderText="库存"
                android:gravity="center"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/productManagerRV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/noneProductLL"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="80dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_weight="1"
                android:background="#c2c2c2"/>
            <TextView
                android:id="@+id/noneProductTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无，请添加商品"
                android:textColor="#c2c2c2"
                android:textSize="17sp"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_weight="1"
                android:background="#c2c2c2"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/allManagerIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/allmanager"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"/>
</RelativeLayout>
