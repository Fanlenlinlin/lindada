<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent">

     <RelativeLayout
         android:layout_width="310dp"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:layout_marginTop="20dp">
      <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/juxing_ffffff_da"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginLeft="17dp"
                android:src="@drawable/logo_b"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#b0b0b0"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#323232"
                    android:text="囧了么最新版本下载"/>
                <TextView
                    android:id="@+id/versionTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"
                    android:textColor="#323232"
                    android:text="V0.0.0"/>
                <TextView
                    android:id="@+id/riqiTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="12sp"
                    android:textColor="#b0b0b0"
                    android:text="2016-2-24"/>
            </LinearLayout>
        </LinearLayout>

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="10dp"
                android:background="#e8e8e8"
                android:text="新版特性："
                android:textColor="#666"
                android:textSize="12sp"/>

        <TextView
            android:id="@+id/contentTV"
            android:layout_below="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="10dp"
            android:background="#e8e8e8"
            android:text="-修复相关BUG"
            android:textColor="#909090"
            android:textSize="12sp"/>

         <TextView
             android:id="@+id/updateTV"
             android:layout_width="match_parent"
             android:layout_height="48dp"
             android:layout_below="@+id/contentTV"
             android:gravity="center"
             android:text="下载"
             android:textColor="#fff"
             android:textSize="15sp"
             android:background="@color/purple"/>
     </RelativeLayout>
    <Button
        android:id="@+id/tuichuBT"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginRight="4dp"
        android:background="@drawable/tuichu_dialog_icon"/>
</FrameLayout>
