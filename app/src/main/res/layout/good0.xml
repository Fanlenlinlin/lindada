<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/goodLayout">
    <FrameLayout
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/juxing_c2c2c2_kuan">
        <ImageView
            android:id="@+id/goodIV"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerInside"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/already_downTV"
            android:visibility="gone"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@drawable/already_down"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <TextView
            android:id="@+id/goodNameTV"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#323232"
            android:text="商品名"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/renMingBiTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999"
                android:text="¥  "/>
            <TextView
                android:id="@+id/moneyTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999"
                android:text="0.00"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

