<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorPrimary"
    tools:context=".Order.OrderActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar">

        <ImageView
            android:onClick="back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:textSize="20sp"
            android:text="查看评价"
            android:layout_centerInParent="true"/>

        <ImageView
            android:onClick="search"
            android:layout_width="24dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/search"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"/>
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/pingjiaRG"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="#ccc">
        <RadioButton
            android:id="@+id/allPingjiaRB"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/pingjia_check_selector"
            android:layout_margin="3dp"
            android:text="全部"
            android:textColor="@drawable/pingjia_textcolor_check_selector"
            android:textSize="12sp"
            android:gravity="center"
            android:padding="8dp"/>
        <RadioButton
            android:id="@+id/goodPingjiaRB"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/pingjia_check_selector"
            android:layout_margin="3dp"
            android:text="好评"
            android:textColor="@drawable/pingjia_textcolor_check_selector"
            android:textSize="12sp"
            android:gravity="center"
            android:padding="8dp"/>
        <RadioButton
            android:id="@+id/middlePingjiaRB"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/pingjia_check_selector"
            android:layout_margin="3dp"
            android:text="中评"
            android:textColor="@drawable/pingjia_textcolor_check_selector"
            android:textSize="12sp"
            android:gravity="center"
            android:padding="8dp"/>

        <RadioButton
            android:id="@+id/lowPingjiaRB"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:button="@null"
            android:background="@drawable/pingjia_check_selector"
            android:layout_margin="3dp"
            android:text="差评"
            android:textColor="@drawable/pingjia_textcolor_check_selector"
            android:textSize="12sp"
            android:gravity="center"
            android:padding="8dp"/>
    </RadioGroup>

    <LinearLayout
        android:onClick="searchDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="日期查询"
            android:textColor="#666"/>
        <ImageView
            android:id="@+id/searchDateIV"
            android:layout_width="15dp"
            android:layout_height="9dp"
            android:src="@drawable/direction_down"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/searchDateLL"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="4dp"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起始日期"
                android:textColor="#666"/>

            <LinearLayout
                android:onClick="startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/juxing_666666_kuan"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/startTimeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20160808"
                    android:textColor="#000"/>
                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/direction_down_small"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="终止日期"
                android:textColor="#666"/>

            <LinearLayout
                android:onClick="endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/juxing_666666_kuan"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/endTimeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20160808"
                    android:textColor="#000"/>
                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/direction_down_small"/>
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:onClick="searchDateNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="查询"
                android:background="@color/purple"
                android:textColor="#fff"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/pingjiaRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/kong_pingjiaLL"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="80dp"
        android:paddingBottom="80dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="66dp"
            android:layout_height="51dp"
            android:src="@drawable/kong_wait_for_pingjia"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"
                android:background="#A3A3A3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#A3A3A3"
                android:textSize="16sp"
                android:text="您还没有收到任何评价"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"
                android:background="#A3A3A3"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
