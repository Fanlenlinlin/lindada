<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp"
    android:paddingBottom="10dp"
    android:background="#eeffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择分享方式"
        android:textColor="#000"
        android:textSize="17sp"
        android:layout_margin="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <LinearLayout
            android:id="@+id/wechatLL"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ssdk_oks_classic_wechat"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="微信好友"
                android:textSize="10sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/wechatmomentsLL"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ssdk_oks_classic_wechatmoments"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="微信朋友圈"
                android:textSize="10sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/qqLL"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ssdk_oks_classic_qq"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="QQ好友"
                android:textSize="10sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/qqzoneLL"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ssdk_oks_classic_qzone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="QQ空间"
                android:textSize="10sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/sinaweiboLL"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ssdk_oks_classic_sinaweibo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="微博"
                android:textSize="10sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/cancelShareTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:gravity="center"
        android:padding="10dp"
        android:layout_margin="16dp"
        android:textSize="17sp"
        android:textColor="#fff"
        android:text="取消分享"/>
</LinearLayout>